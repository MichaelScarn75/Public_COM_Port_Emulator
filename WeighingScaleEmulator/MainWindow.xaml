<Window
    x:Class="WeighingScaleEmulator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeighingScaleEmulator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="COM Port Emulator By William"
    Width="1000"
    Height="768"
    MinWidth="1000"
    MinHeight="768"
    MaxWidth="1000"
    MaxHeight="768"
    Closing="Window_Closing"
    Icon="Window_Icon.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Label
            Width="518"
            Margin="10,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="COM Port For Sending Data:"
            FontSize="31" />
        <Label
            Width="518"
            Margin="10,120,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Enter Weight Data (Decimal Format):"
            FontSize="31" />
        <syncfusion:IntegerTextBox
            Name="TextBox1"
            Width="338"
            Height="75"
            Margin="546,18,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="50"
            MaxValue="99999999999"
            TextAlignment="Left"
            WatermarkText="Enter a COM Port Number..."
            WatermarkTextIsVisible="True" />
        <syncfusion:DoubleTextBox
            Name="TextBox2"
            Width="338"
            Height="75"
            Margin="546,108,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="50"
            MaxValue="999999999.99"
            MaximumNumberDecimalDigits="3"
            TextAlignment="Left"
            WatermarkText="Enter Weight Data..."
            WatermarkTextIsVisible="True" />
        <syncfusion:ButtonAdv
            Width="176"
            Height="108"
            Margin="93,560,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ButtonAdv_Click"
            FontSize="31"
            IconHeight="50"
            IconWidth="50"
            Label="Send"
            LargeIcon="\send.png"
            SizeMode="Large"
            SmallIcon="\send.png" />
        <Label
            Width="146"
            Margin="382,208,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Baudrate:"
            FontSize="31" />
        <syncfusion:ComboBoxAdv
            Name="BAUDRATE_COMBOBOX"
            Height="86"
            Margin="546,200,99,0"
            VerticalAlignment="Top"
            AllowMultiSelect="False"
            FontSize="31">
            <syncfusion:ComboBoxItemAdv Content="75" />
            <syncfusion:ComboBoxItemAdv Content="110" />
            <syncfusion:ComboBoxItemAdv Content="134" />
            <syncfusion:ComboBoxItemAdv Content="150" />
            <syncfusion:ComboBoxItemAdv Content="300" />
            <syncfusion:ComboBoxItemAdv Content="600" />
            <syncfusion:ComboBoxItemAdv Content="1200" />
            <syncfusion:ComboBoxItemAdv Content="1800" />
            <syncfusion:ComboBoxItemAdv Content="2400" />
            <syncfusion:ComboBoxItemAdv Content="4800" />
            <syncfusion:ComboBoxItemAdv Content="7200" />
            <syncfusion:ComboBoxItemAdv Content="9600" />
            <syncfusion:ComboBoxItemAdv Content="14400" />
            <syncfusion:ComboBoxItemAdv Content="19200" />
            <syncfusion:ComboBoxItemAdv Content="38400" />
            <syncfusion:ComboBoxItemAdv Content="57600" />
            <syncfusion:ComboBoxItemAdv Content="115200" />
            <syncfusion:ComboBoxItemAdv Content="128000" />
        </syncfusion:ComboBoxAdv>
        <Label
            Width="146"
            Margin="15,208,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Databit:"
            FontSize="31" />
        <syncfusion:ComboBoxAdv
            Name="DATABIT_COMBOBOX"
            Height="86"
            Margin="179,200,731,0"
            VerticalAlignment="Top"
            AllowMultiSelect="False"
            FontSize="31">
            <syncfusion:ComboBoxItemAdv Content="4" />
            <syncfusion:ComboBoxItemAdv Content="5" />
            <syncfusion:ComboBoxItemAdv Content="6" />
            <syncfusion:ComboBoxItemAdv Content="7" />
            <syncfusion:ComboBoxItemAdv Content="8" />
        </syncfusion:ComboBoxAdv>
        <Label
            Width="146"
            Margin="15,336,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Parity:"
            FontSize="31" />
        <syncfusion:ComboBoxAdv
            Name="PARITY_COMBOBOX"
            Height="86"
            Margin="179,328,693,0"
            VerticalAlignment="Top"
            AllowMultiSelect="False"
            FontSize="31">
            <syncfusion:ComboBoxItemAdv Content="None" />
            <syncfusion:ComboBoxItemAdv Content="Odd" />
            <syncfusion:ComboBoxItemAdv Content="Even" />
            <syncfusion:ComboBoxItemAdv Content="Mark" />
            <syncfusion:ComboBoxItemAdv Content="Space" />
        </syncfusion:ComboBoxAdv>
        <Label
            Width="146"
            Margin="382,328,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Stop bits:"
            FontSize="31" />
        <syncfusion:ComboBoxAdv
            Name="STOPBITS_COMBOBOX"
            Height="86"
            Margin="546,320,99,0"
            VerticalAlignment="Top"
            AllowMultiSelect="False"
            FontSize="31">
            <syncfusion:ComboBoxItemAdv Content="1" />
            <syncfusion:ComboBoxItemAdv Content="1.5" />
            <syncfusion:ComboBoxItemAdv Content="2" />
        </syncfusion:ComboBoxAdv>
        <Label
            Width="194"
            Margin="334,454,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Content="Flow control:"
            FontSize="31" />
        <syncfusion:ComboBoxAdv
            Name="FLOW_COMBOBOX"
            Height="86"
            Margin="546,446,99,0"
            VerticalAlignment="Top"
            AllowMultiSelect="False"
            FontSize="31">
            <syncfusion:ComboBoxItemAdv Content="Xon / Xoff" />
            <syncfusion:ComboBoxItemAdv Content="Hardware" />
            <syncfusion:ComboBoxItemAdv Content="None" />
        </syncfusion:ComboBoxAdv>
        <syncfusion:SfTextBoxExt
            Name="OutputTextBox"
            Width="567"
            Height="147"
            Margin="334,560,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="30"
            IsReadOnly="True"
            TextWrapping="Wrap"
            Watermark="Waiting for output..." />
    </Grid>
</Window>
